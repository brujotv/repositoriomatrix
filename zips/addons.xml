<addons>
<addon id="repository.naranjitoRepo" name="naranjitoRepo" version="1.0" provider-name="naranjito">
    <extension point="xbmc.addon.repository" name="Nome Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/brujotv/repositoriomatrix/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/brujotv/repositoriomatrix/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/brujotv/repositoriomatrix/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>naranjitoRepo</summary>
        <description>Addons para todos</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="plugin.video.Naranjitomatrix"
       name="[COLOR orange]Naranjito[/COLOR]"
       version="1.2.1+matrix"
       provider-name="Naranjito">
<requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.simplejson"/>
	<import addon="script.module.kodi-six" />
</requires>  
<extension point="xbmc.python.pluginsource" library="default.py">
	<provides>video</provides>
</extension>   
<extension point="xbmc.addon.metadata">
	 <summary lang="en">Creado por Naranjito</summary>
    <description lang="en">Naranjito 2017</description>
    <disclaimer lang="en"></disclaimer>
	<platform>all</platform>
	<assets>
       <icon>icon.png</icon>
       <fanart>fanart.jpg</fanart>
<screenshot>resources/screenshots/home.png</screenshot>
<screenshot>resources/screenshots/movies.png</screenshot>
<screenshot>resources/screenshots/series.png</screenshot>
</assets>
	<news>news
	</news>
</extension>
</addon>
<addon id="repository.alfa-addon" name="[COLOR red]Alfa-Addon[/COLOR] Repo" version="1.0.6" provider-name="Alfa Addon">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="Alfa-Addon Repo">
        <info>https://github.com/alfa-addon/alfa-repo/raw/master/addons.xml</info>
        <checksum>https://github.com/alfa-addon/alfa-repo/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/alfa-addon/alfa-repo/raw/master</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Repositorio para Alfa-Addon</summary>
        <description></description>
        <disclaimer>The owners and submitters to this repository do not host or distribute any of the content displayed by these addons nor do they have any affiliation with the content providers.</disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>